<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/color_picker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="颜色选择"/>

    <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.colorPicker.ColorPicker
        android:id="@+id/color_picker"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.colorPicker.MultiColorPicker
        android:id="@+id/multi_color_picker"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>