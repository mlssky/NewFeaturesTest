<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送普通通知"
        android:onClick="sendNormalNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送进度条通知，点击启动activity"
        android:textAllCaps="false"
        android:onClick="sendProgressNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义样式的通知"
        android:textAllCaps="false"
        android:onClick="sendMyNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新自定义通知"
        android:textAllCaps="false"
        android:onClick="updateMyNotification"/>

</LinearLayout>