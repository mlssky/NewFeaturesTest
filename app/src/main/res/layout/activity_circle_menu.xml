<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/circle_menu_activity_bg"
    android:gravity="center_horizontal">

    <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout
        android:id="@+id/circle_menu_1"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:background="@mipmap/circle_menu_bg">

        <RelativeLayout
            android:id="@id/id_circle_menu_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/circle_menu_center_unlogin" />
            <ImageView
                android:layout_width="92.0dip"
                android:layout_height="92.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/circle_menu_unlogin_normal" />
        </RelativeLayout>

    </com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/circle_menu_turnplate_bg_left"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="手机银行"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="贴心的银行服务，带给您更安全便捷的智能金融体验。"
                android:textColor="#ffffff"
                android:textSize="13.5dip" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout
                android:id="@+id/circle_menu_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/circle_menu_turnplate_bg_right" >

                <RelativeLayout
                    android:id="@id/id_circle_menu_item_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="104.0dip"
                        android:layout_height="104.0dip"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/circle_menu_center_unlogin" />
                    <ImageView
                        android:layout_width="116.0dip"
                        android:layout_height="116.0dip"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/circle_menu_unlogin_normal" />
                </RelativeLayout>
            </com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>