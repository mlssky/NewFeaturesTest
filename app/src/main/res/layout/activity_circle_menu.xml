<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/circle_menu_activity_bg"
    android:gravity="center_vertical">

    <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout
        android:id="@+id/circle_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/circle_menu_bg">

        <RelativeLayout
            android:id="@id/id_circle_menu_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="104.0dip"
                android:layout_height="104.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/circle_menu_center_unlogin" />
            <ImageView
                android:layout_width="116.0dip"
                android:layout_height="116.0dip"
                android:layout_centerInParent="true"
                android:background="@mipmap/circle_menu_unlogin_normal" />
        </RelativeLayout>

    </com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.CircleMenu.CircleMenuLayout>

</LinearLayout>