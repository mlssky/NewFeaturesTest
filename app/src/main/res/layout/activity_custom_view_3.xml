<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#c4e692">
    
    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomLineView
        android:id="@+id/custom_line_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#b0e9e5"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomAreaChartsView
        android:id="@+id/custom_area_charts_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"/>

</LinearLayout>