<?xml version="1.0" encoding="utf-8"?>
<com.yuyang.fitsystemwindowstestdrawer.sourceCodeAnalyze.drawableAbout.MyStateRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/selector_item_state"
    android:paddingLeft="17dp">

    <ImageView
        android:id="@+id/message_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_message_state"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:duplicateParentState="true"/>

    <TextView
        android:id="@+id/message_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/message_state_icon" />

</com.yuyang.fitsystemwindowstestdrawer.sourceCodeAnalyze.drawableAbout.MyStateRelativeLayout>