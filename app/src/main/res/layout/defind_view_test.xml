<?xml version="1.0" encoding="utf-8"?>
<com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.dragHelperViews.VerticalDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="#c7f16c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.MyViewGroup
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#717070">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#FF4444"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="#5dff44"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="#444dff"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="#ef44ff"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.MyViewGroup>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.flowLayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:gravity="center"
            android:background="#66111111">

            <TextView
                style="@style/flow_item_text_style"
                android:text="Welcome" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="IT工程师" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="学习ing" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="恋爱ing" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="挣钱ing" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="努力ing" />

            <TextView
                style="@style/flow_item_text_style"
                android:text="I thick i can" />

        </com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.flowLayout.FlowLayout>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.flowLayout.FlowLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#66111111"
            app:gravity="right"
            android:layout_marginTop="20dp" >

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_2"
                android:text="Welcome"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_2"
                android:text="IT工程师"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_2"
                android:text="学习ing"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_2"
                android:text="恋爱ing"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_3"
                android:text="挣钱ing"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_3"
                android:text="努力ing"
                android:textColor="#43BBE7" />

            <TextView
                style="@style/flow_item_text_style"
                android:background="@drawable/flow_item_bg_3"
                android:text="I thick i can"
                android:textColor="#43BBE7" />
        </com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.flowLayout.FlowLayout>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.flowLayout.TagFlowLayout
            android:id="@+id/defind_tag_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:max_select="3"/>

    </LinearLayout>

    <LinearLayout
        android:background="#f16cc5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.ClearEditTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:text="自带清除按钮的edittext"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信倒计时启动"/>

        <Button
            android:id="@+id/defind_next_drag_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示下一个DragHelperView"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/defind_vertical_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示竖直滚动"/>
        <Button
            android:id="@+id/defind_gesture_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手势密码"/>
        <Button
            android:id="@+id/defind_hualang_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画廊效果"/>
        <Button
            android:id="@+id/defind_goto_ArcMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ArcMenu菜单实例"/>
        <Button
            android:id="@+id/defind_qq_sliding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ侧滑1"/>
        <Button
            android:id="@+id/defind_qq_double_sliding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双侧QQ侧滑"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="上滑显示下层视图"/>

    </LinearLayout>

</com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.dragHelperViews.VerticalDrawerLayout>