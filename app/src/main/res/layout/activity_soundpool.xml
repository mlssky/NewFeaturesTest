<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/sound_pool_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放第1个" />

    <Button
        android:id="@+id/sound_pool_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放第2个" />

    <Button
        android:id="@+id/sound_pool_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放第3个" />

    <Button
        android:id="@+id/sound_pool_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止所有" />

    <Button
        android:id="@+id/sound_pool_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改第一个的播放频率" />

</LinearLayout>