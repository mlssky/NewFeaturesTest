<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yuyang.fitsystemwindowstestdrawer.googleWidget.customFlexboxLayout.TagFlowLayout
        android:id="@+id/flex_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6f8763"
        app:max_select="3"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eac3c3"
        android:layout_marginTop="30dp"
        app:justifyContent="space_around"
        app:alignContent="flex_end"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="wrap">
        <CheckedTextView
            android:background="@drawable/flow_item_bg_selector"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发测试"/>
        <CheckBox
            style="@style/flow_item_text_style"
            android:background="@drawable/flow_item_bg_selector"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:text="测试"/>

        <TextView
            style="@style/flow_item_text_style"
            android:layout_height="40dp"
            android:text="Welcome" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_alignSelf="baseline"
            android:text="IT工程师" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_order="0"
            android:text="学习ing" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_order="-1"
            android:text="恋爱ing" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_flexGrow="1"
            android:text="挣钱ing" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_flexGrow="1"
            android:text="努力ing" />

        <TextView
            style="@style/flow_item_text_style"
            app:layout_flexGrow="2"
            android:text="I thick i can" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>