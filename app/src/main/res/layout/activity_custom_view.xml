<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    
    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomVerificationCodeView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:titleText="3456"
        app:titleColor="#faa4f8"
        app:titleSize="40sp"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomTextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:attr_one="attr one in xml"
        style="@style/ThroughStyle"
        android:text="View构造函数测试，详情请看log"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomTextView2
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="对TextView进行拓展"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomImageView
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="150dp"
        app:titleText="开发测试"
        app:titleColor="#faa4f8"
        app:titleSize="16sp"
        app:image="@mipmap/img1"
        app:imageScaleType="fillXY"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomProgressBar
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:circleWidth="10dp"
        app:firstColor="#7777f2"
        app:secondColor="#c6fd8e"
        app:speed="20"/>

    <com.yuyang.fitsystemwindowstestdrawer.customView.CustomVolumeControlBar
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:circleWidth="10dp"
        app:firstColor="#7777f2"
        app:secondColor="#c6fd8e"
        app:dotCount="15"
        app:splitSize="20"
        app:bg="@mipmap/home_buttons_info_pressed"/>

    <Button
        android:id="@+id/custom_next_page_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一个页面"/>

    <Button
        android:id="@+id/custom_next_page_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一个页面"/>

</LinearLayout>