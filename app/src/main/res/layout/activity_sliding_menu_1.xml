<?xml version="1.0" encoding="utf-8"?>
<com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.QQSlidingMenu.SimpleSlidingMenu.SlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyang="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    yuyang:rightPadding="50dp"
    android:background="@mipmap/sliding_menu_bg">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/sliding_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/h" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toggleMenu"
                android:text="侧边导航"/>

        </LinearLayout>

    </LinearLayout>

</com.yuyang.fitsystemwindowstestdrawer.userDefinedViews.QQSlidingMenu.SimpleSlidingMenu.SlidingMenu>