<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统的TabLayout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/indicator_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabBackground="@color/colorPrimaryDark"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义的Indicator"/>
    <com.yuyang.fitsystemwindowstestdrawer.ViewPagerIndicator.userDefinedTab.ViewPagerIndicator
        android:id="@+id/indicator_my_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义的TabLayout,改自上面的Indicator"/>
    <com.yuyang.fitsystemwindowstestdrawer.ViewPagerIndicator.userDefinedTabLayout.MyTabLayout
        android:id="@+id/indicator_my_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义的ColorTrackView,字体颜色变化"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:onClick="gotoTrackViewSimpleActivity"
            android:textSize="10sp"
            android:text="ColorTrackView简单应用"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <com.yuyang.fitsystemwindowstestdrawer.ViewPagerIndicator.colorTrackTextIndicator.ColorTrackView
            android:id="@+id/indicator_color_track_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:color_track_progress="1"
            app:color_track_text="简介"
            app:color_track_change_color="@color/colorAccent"
            app:color_track_origin_color="#ffffff"
            app:color_track_text_size="18sp" />

        <com.yuyang.fitsystemwindowstestdrawer.ViewPagerIndicator.colorTrackTextIndicator.ColorTrackView
            android:id="@+id/indicator_color_track_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:color_track_text="评价"
            app:color_track_change_color="@color/colorAccent"
            app:color_track_origin_color="#ffffff"
            app:color_track_text_size="18sp" />

        <com.yuyang.fitsystemwindowstestdrawer.ViewPagerIndicator.colorTrackTextIndicator.ColorTrackView
            android:id="@+id/indicator_color_track_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:color_track_text="相关"
            app:color_track_change_color="@color/colorAccent"
            app:color_track_origin_color="#ffffff"
            app:color_track_text_size="18sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/indicator_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.PagerTabStrip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#c170c0"/>

        <!--<android.support.v4.view.PagerTitleStrip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>-->

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffa9a7">

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorIcon.ChangeColorIconWithTextView
            android:id="@+id/wechat_indicator_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:bottom_icon="@mipmap/wechat_icon_1"
            app:text="标签1"
            app:text_size="12sp"/>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorIcon.ChangeColorIconWithTextView
            android:id="@+id/wechat_indicator_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:bottom_icon="@mipmap/wechat_icon_2"
            app:text="标签2"
            app:text_size="12sp"/>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorIcon.ChangeColorIconWithTextView
            android:id="@+id/wechat_indicator_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:bottom_icon="@mipmap/wechat_icon_3"
            app:text="标签3"
            app:text_size="12sp"/>

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorIcon.ChangeColorIconWithTextView
            android:id="@+id/wechat_indicator_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:bottom_icon="@mipmap/wechat_icon_4"
            app:text="标签4"
            app:text_size="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorLayout.BottomItemChangeColor
            android:id="@+id/wechat_tab0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            app:bottom_item_front_icons="@mipmap/tab_found2"
            app:bottom_item_front_color="#ff919191"
            app:bottom_item_back_icons="@mipmap/tab_found1"
            app:bottom_item_back_color="#ff45C01A"
            app:bottom_item_text="主页"
            app:bottom_item_text_size="12sp" />

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorLayout.BottomItemChangeColor
            android:id="@+id/wechat_tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            app:bottom_item_front_icons="@mipmap/tab_contact2"
            app:bottom_item_front_color="#ff919191"
            app:bottom_item_back_icons="@mipmap/tab_contact1"
            app:bottom_item_back_color="#ff45C01A"
            app:bottom_item_text="联系人"
            app:bottom_item_text_size="12sp" />

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorLayout.BottomItemChangeColor
            android:id="@+id/wechat_tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            app:bottom_item_front_icons="@mipmap/tab_found2"
            app:bottom_item_front_color="#ff919191"
            app:bottom_item_back_icons="@mipmap/tab_found1"
            app:bottom_item_back_color="#ff45C01A"
            app:bottom_item_text="发现"
            app:bottom_item_text_size="12sp" />

        <com.yuyang.fitsystemwindowstestdrawer.userDefinedWidget.weChatTabIndicator.ChangeColorLayout.BottomItemChangeColor
            android:id="@+id/wechat_tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            app:bottom_item_front_icons="@mipmap/tab_me2"
            app:bottom_item_front_color="#ff919191"
            app:bottom_item_back_icons="@mipmap/tab_me1"
            app:bottom_item_back_color="#ff45C01A"
            app:bottom_item_text="我"
            app:bottom_item_text_size="12sp" />
    </LinearLayout>

</LinearLayout>