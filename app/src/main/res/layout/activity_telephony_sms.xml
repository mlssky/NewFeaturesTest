<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话服务"/>
    <Button
        android:id="@+id/tel_sms_10086"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动拨号程序：10086"/>
    <Button
        android:id="@+id/tel_sms_call_10086"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直接拨打10086"/>
    <Button
        android:id="@+id/tel_sms_phone_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取本机信息"/>
    <TextView
        android:id="@+id/tel_sms_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff37c"
        android:text="本机信息"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信服务"/>
    <Button
        android:id="@+id/tel_sms_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动其他应用发送短信"/>
    <Button
        android:id="@+id/tel_sms_sms_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用自身发送短息"/>

</LinearLayout>