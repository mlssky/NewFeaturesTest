<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:drawable="@drawable/ic_menu_camera" android:duration="500"/>
    <item android:drawable="@drawable/ic_menu_manage" android:duration="500"/>
    <item android:drawable="@drawable/ic_menu_send" android:duration="500"/>
    <item android:drawable="@drawable/ic_menu_gallery" android:duration="500"/>
    <item android:drawable="@drawable/ic_menu_share" android:duration="500"/>
    <item android:drawable="@drawable/ic_menu_slideshow" android:duration="500"/>
</animation-list>