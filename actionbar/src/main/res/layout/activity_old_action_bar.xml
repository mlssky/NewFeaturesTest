<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.yuyang.actionbar.OldActionBar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="gotoNewToolbarActivity"
            android:text="使用Toolbar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="gotoThemeStatusBarActivity"
            android:text="使用theme配置状态栏透明"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="gotoThemeStatusBarActivity2"
            android:text="使用theme配置状态栏透明(不包括NavigationBar)"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="gotoWeixinStatusBarActivity"
            android:text="微信漂流瓶状态栏隐藏"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android_Developer-System Bars课程"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Dimming the System Bars"
            android:onClick="gotoSystemBars1Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Hiding the Status Bar 小于等于 Android4.0"
            android:onClick="gotoSystemBars2Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Hiding the Status Bar 大于等于 Android4.1"
            android:onClick="gotoSystemBars3Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Hide the Navigation Bar"
            android:onClick="gotoSystemBars4Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Use Non-Sticky Immersion"
            android:onClick="gotoSystemBars5Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Use Sticky Immersion"
            android:onClick="gotoSystemBars6Activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="gotoTagStatusBarActivity"
            android:text="代码动态配置状态栏透明"/>
    </LinearLayout>
</ScrollView>