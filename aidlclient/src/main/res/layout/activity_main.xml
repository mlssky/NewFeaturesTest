<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yuyang.aidlclient.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用AIDL实现IPC通讯"/>
    <Button
        android:id="@+id/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="BindService"/>

    <Button
        android:id="@+id/un_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bind_service"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="UnBindService"/>

    <Button
        android:id="@+id/aidl_cale_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/un_bind_service"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="使用AIDL计算12+12"/>

    <Button
        android:id="@+id/aidl_cale_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/aidl_cale_add"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="使用AIDL计算78-10"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/aidl_cale_min"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/aidl_cale_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="自定义Binder实现IPC通讯"/>

    <Button
        android:id="@+id/bind_service_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:text="BindService"/>

    <Button
        android:id="@+id/un_bind_service_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bind_service_binder"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="UnBindService"/>

    <Button
        android:id="@+id/cale_add_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/un_bind_service_binder"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="使用AIDL计算13+13"/>

    <Button
        android:id="@+id/cale_min_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cale_add_binder"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="使用AIDL计算78-20"/>

</RelativeLayout>
